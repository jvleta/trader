{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "npm run dev",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Build WASM Module",
			"type": "shell",
			"command": "./build.sh",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/wasm"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": {
				"owner": "emcc",
				"fileLocation": [
					"relative",
					"${workspaceFolder}/wasm"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		{
			"label": "Copy WASM to Public",
			"type": "shell",
			"command": "npm",
			"args": ["run", "copy:wasm"],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"dependsOn": "Build WASM Module"
		},
		{
			"label": "Build All",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Build WASM Module",
				"Copy WASM to Public"
			]
		}
	]
}