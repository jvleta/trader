{
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.default.compilerPath": "/opt/homebrew/bin/emcc",
  "C_Cpp.default.intelliSenseMode": "clang-x64",
  "files.associations": {
    "*.h": "c",
    "*.hpp": "cpp",
    "*.cpp": "cpp",
    "*.c": "c"
  },
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.dimInactiveRegions": false,
  "C_Cpp.intelliSenseEngineFallback": "disabled",
  "C_Cpp.autocomplete": "default",
  "C_Cpp.suggestSnippets": true,
  "C_Cpp.exclusionPolicy": "checkFolders",
  "C_Cpp.loggingLevel": "Warning",

  // Formatting settings
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true
  },
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.clang_format_path": "/opt/homebrew/opt/llvm/bin/clang-format",
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.clang_format_fallbackStyle": "Google",

  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/wasm/*.wasm": true,
    "**/wasm/options_calculator.js": true
  }
}
